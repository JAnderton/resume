<section class="job">
  <h3 class="job-title">{{title}}</h3>
  <span class="job-date-range">{{date-range start end parent.i18n.current}}</span>

  <div class="job-data">
    <div class="job-description">
      {{orphan-killer description}}
    </div>

    {{#if projects.length}}
      <h4 class="job-subtitle">{{ parent.i18n.sampleProjects}}</h4>
      <ul class="job-projects">
        {{#each projects}}
          <li class="project">
            <h3 class="project-title">{{title}}</h3>
            <div class="project-description">
              {{orphan-killer description}}
            </div>

            {{#if url}}
              <a class="project-visit" href="{{url}}">{{url}}</a>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
</section>
